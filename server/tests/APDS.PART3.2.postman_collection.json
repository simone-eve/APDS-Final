							"// Define a variable to track the number of failed login attempts\r",
							"let failedAttempts = 0;\r",
							"\r",
							"// Set a threshold for triggering the 429 status\r",
							"const bruteForceThreshold = 5; // Adjust this number to suit your rate limit settings\r",
							"\r",
							"// Add your test script logic\r",
							"pm.test(\"Status code should be 401 for invalid login attempts\", function () {\r",
							"    if (failedAttempts < bruteForceThreshold) {\r",
							"        pm.response.to.have.status(401);\r",
							"    } else {\r",
							"        pm.response.to.have.status(429);\r",
							"    }\r",
							"});\r",
							"\r",
							"// Increment the failed attempts counter on each failed login attempt\r",
							"if (pm.response.code === 401) {\r",
							"    failedAttempts++;\r",
							"}\r",
